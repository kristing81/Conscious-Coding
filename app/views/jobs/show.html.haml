%h1= @job.title
.row
  .col-md-8.margin-top-1
    %p= @job.description
    %p= @job.company
    %p= @job.category
    %p= @job.job_type
    %p= @job.location
    %p= @job.created_on
    %p= @job.skills

%button.btn.btn-default=link_to "Apply for Job", @job.url
  .col-md-4 
    = link_to "Back", root_path, class: "btn btn-sm btn-default"
    = link_to "Edit", edit_job_path(@job), class: "btn btn-sm btn-default"
    = link_to "Delete", job_path(@job), method: :delete, data: {confirm: "Are you sure you want to delete this job?" }, class: "btn btn-sm btn-default"
