.row.intro
  .col-md-6.margin-top-1.col-md-offset-2
    %h2= @job.title
    %h5
      Posted on #{@job.created_at.strftime("%b %d")}
    = @job.company
    %small.pull-right
      = link_to "#{@job.url}", @job.url
    %hr
    %i.glyphicon.glyphicon-time
    = @job.job_type_id

    %i.glyphicon.glyphicon-map-marker.pull-right
      = @job.location
    %hr
.row
  .col-md-6.col-md-offset-2
    .inner
      %h4 Job Description
      = @job.description
     
      %h5 Skills
      = @job.skills.join(', ')

  .col-md-2.col-md-offset-2 
    =link_to "Apply for Job", @job.url, class: "btn btn-lg btn-success"
.col-md-4 
= link_to "Back", root_path, class: "btn btn-sm btn-default"
= link_to "Edit", edit_job_path(@job), class: "btn btn-sm btn-default"
= link_to "Delete", job_path(@job), method: :delete, data: {confirm: "Are you sure you want to delete this job?"}, class: "btn btn-sm btn-danger"

