= simple_form_for(@employer, html: { class: 'form-horizontal'}) do |f|
  = f.input :company_name, label: "Name of Organization", input_html: { class: "form-control" }
  = f.input :location, label: "Location", input_html: { class: "form-control" }
  = f.input :description, as: :text, label: "Tell us a bit about your organization", input_html: { class: "form-control" }
  = f.input :url, label: "Website", input_html: { class: "form-control" }
  %br/
  = f.button :submit, "Update Profile", class: 'btn btn-success', input_html: { class: "form-control" }
